{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowJs": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": ["./src/**/*"]
}